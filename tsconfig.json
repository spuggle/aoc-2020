{
  "compilerOptions": {
    "lib": [ "ESNEXT" ],
    "target": "ESNEXT",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",

    "esModuleInterop": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": [ "src/" ]
}
